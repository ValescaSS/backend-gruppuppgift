 </template>

 <template id="editCommentTemplate">
 <form id="editCommentForm">
       <textarea name="content" id="editCommentContent" cols="30" rows="10" value="" ></textarea>
       <input type="submit" value="Add comment">
     </form>     

 </template>

 <template id="createEntryFormTemplate">
    
    <div id ="showEntriesForm" >
